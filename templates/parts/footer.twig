<footer>
	<div class="lg-container">
		<div class="row">
			<div class="col-12 col-md-6 col-lg-3 order-lg-5">
				<div class="footer-links">
					<h4>Get in Touch</h4>
					<ul class="big">
						<li>
							<a href="mailto:{{globalData.emailAddress}}">{{globalData.emailAddress}}</a>
						</li>
						<li>
							<a href="tel:{{ globalData.phoneNumber|replace(' ', '') }}">{{ globalData.phoneNumber }}</a>
						</li>
						<li>
							<a href="{{globalData.linkToGoogleMap}}" target="_blank">
								{{globalData.physicalAddress}}</a>
						</li>
					</ul>
					<div class="social-media">
						<a href="{{globalData.facebook}}" class="fb" target="_blank">
							<span class="sr-only">Facebook</span>
						</a>
						<a href="{{globalData.instagram}}" class="ig" target="_blank">
							<span class="sr-only">Instagram</span>
						</a>
					</div>
				</div>
			</div>
			<div class="col-12 col-md-6 col-lg-2 order-lg-1">
				<div class="footer-links">
                    <h4>Our Services</h4>
                    {{ craft.olivemenus.getMenuHTML('footerServices',{ 
                        'menu-id': 'footerServices' }) }}
				</div>
			</div>
			<div class="col-12 col-md-6 col-lg-2 order-lg-2">
				<div class="footer-links">
					<h4>About Us</h4>
                    {{ craft.olivemenus.getMenuHTML('footerAbout',{ 
                        'menu-id': 'footerAbout' }) }}
				</div>
			</div>
			<div class="col-12 col-md-6 col-lg-2 order-lg-3">
				<div class="footer-links">
					<h4>Case Studies</h4>
                    {{ craft.olivemenus.getMenuHTML('footerCaseStudies',{ 
                        'menu-id': 'footerCaseStudies' }) }}
				</div>
			</div>
			<div class="col-12 col-md-12 col-lg-3 order-lg-4">
				<div class="footer-logos">
                    {% for oneImage in globalData.footerLogos.all() %}
                        <img src="{{oneImage.url}}" alt="{{oneImage.title}}">
                    {% endfor %}
				</div>
			</div>
		</div>
		<div class="row copyright">
			<div class="col-12 col-lg-2">
				<p>Copyright Â© 2019 Synergy&nbsp;Flooring</p>
			</div>
			<div class="col-12 col-lg-8">
				<a href="/terms">Terms and Conditions</a>
			</div>
			<div class="col-12 col-lg-2">
				<div class="fabric">
					<p>Website by</p>
                    <a href="https://fabricdigital.co.nz/" target="_blank">
                        <span class="sr-only">Fabric Digital</span>
                    </a>
				</div>
			</div>
		</div>
	</div>
</footer>
